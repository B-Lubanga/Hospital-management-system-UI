{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist-node"
  },
  "include": ["vite.config.ts", "postcss.config.js", "tailwind.config.ts"],
  "exclude": ["src/**/*", "node_modules", "dist"]
}
